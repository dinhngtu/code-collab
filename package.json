{
	"name": "vscode-collab",
	"displayName": "vscode-collab",
	"description": "VS Code/Code Server Collaboration extension",
	"publisher": "dinhngtu",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/Rijul5/vscode-teletype.git"
	},
	"engines": {
		"vscode": "^1.56.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"views": {
			"explorer": [
				{
					"id": "extension.collaboration",
					"name": "Collaboration"
				},
				{
					"type": "webview",
					"id": "extension.collabConnection",
					"name": "Collaboration Connector",
					"when": "!ext.connected"
				}
			]
		},
		"colors": [
			{
				"id": "collab.peer.0",
				"description": "Color for peer 1",
				"defaults": {
					"dark": "#ff0000",
					"light": "#ff0000",
					"highContrast": "#ff0000"
				}
			},
			{
				"id": "collab.peer.1",
				"description": "Color for peer 2",
				"defaults": {
					"dark": "#00ff00",
					"light": "#00ff00",
					"highContrast": "#00ff00"
				}
			},
			{
				"id": "collab.peer.2",
				"description": "Color for peer 3",
				"defaults": {
					"dark": "#0000ff",
					"light": "#0000ff",
					"highContrast": "#0000ff"
				}
			},
			{
				"id": "collab.peer.3",
				"description": "Color for peer 4",
				"defaults": {
					"dark": "#ffff00",
					"light": "#ffff00",
					"highContrast": "#ffff00"
				}
			},
			{
				"id": "collab.peer.4",
				"description": "Color for peer 5",
				"defaults": {
					"dark": "#00ffff",
					"light": "#00ffff",
					"highContrast": "#00ffff"
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run esbuild-base -- --minify",
		"esbuild-base": "esbuild ./src/extension.ts --bundle --outdir=out/ --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run esbuild-base -- --sourcemap",
		"esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
		"test-compile": "tsc -p ./",
		"package": "vsce package --allow-star-activation"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "^10.17.24",
		"@types/node-fetch": "^2.6.4",
		"@types/temp": "^0.9.0",
		"@types/vscode": "^1.56.0",
		"@types/ws": "^7.4.7",
		"@vscode/vsce": "^2.19.0",
		"awesome-typescript-loader": "^5.2.1",
		"deep-equal": "^1.1.1",
		"esbuild": "^0.17.19",
		"glob": "^7.1.7",
		"memfs": "^3.2.2",
		"source-map-loader": "^0.2.4",
		"temp": "^0.9.4",
		"ts-mockito": "^2.6.1",
		"tslint": "^5.20.1",
		"typescript": "^3.9.5",
		"unionfs": "^4.4.0",
		"webpack": "^5.75.0",
		"webpack-cli": "^5.0.1"
	},
	"dependencies": {
		"@atom/teletype-client": "github:Rijul5/teletype-client",
		"@types/uuid": "^8.3.0",
		"env-paths": "^2.2.1",
		"google-protobuf": "^3.12.2",
		"mkdirp-promise": "^5.0.1",
		"node-fetch": "^2.6.0",
		"queue-typescript": "^1.0.1",
		"uuid": "^8.3.2",
		"ws": "^7.4.5",
		"y-websocket": "^1.3.15",
		"yaml": "^2.2.2",
		"yjs": "^13.5.6"
	}
}
